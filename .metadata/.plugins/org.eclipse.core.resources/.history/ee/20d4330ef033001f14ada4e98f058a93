package config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.orm.hibernate5.LocalSessionFactoryBean;
import org.springframework.core.io.ClassPathResource;
import javax.sql.DataSource;

@Configuration
public class HibernateConfig {

    @Bean
    public LocalSessionFactoryBean sessionFactory(DataSource dataSource) {
        LocalSessionFactoryBean sessionFactory = new LocalSessionFactoryBean();
        sessionFactory.setDataSource(dataSource);
        sessionFactory.setPackagesToScan("com.example.demo.entity"); // Package where your @Entity classes reside
        sessionFactory.setConfigLocation(new ClassPathResource("hibernate.cfg.xml")); // Optional: Use if you have a separate hibernate.cfg.xml
        return sessionFactory;
    }
}
