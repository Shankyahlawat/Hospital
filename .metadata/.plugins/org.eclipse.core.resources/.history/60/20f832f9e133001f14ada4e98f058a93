package com.example.demo.controller;

import com.example.demo.entity.Doctor;
import com.example.demo.exception.InvalidCityException;
import com.example.demo.service.DoctorService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.Arrays;
import java.util.List;

@RestController
@RequestMapping("/api/doctors")
public class DoctorController {
    @Autowired
    private DoctorService doctorService;

    @PostMapping
    public Doctor addDoctor(@RequestBody Doctor doctor) {
    	List<String> cities = Arrays.asList("Delhi", "Noida", "Faridabad");
    	if (!cities.contains(doctor.getCity())) {
    		throw new InvalidCityException("City not allowed: " + doctor.getCity());
    	}
        return doctorService.saveDoctor(doctor);
    }

    @DeleteMapping("/{id}")
    public void deleteDoctor(@PathVariable Long id) {
        doctorService.deleteDoctor(id);
    }
}
